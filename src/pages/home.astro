        <Fragment slot="content">
          <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Comunicación</h3>
        </Fragment>
      </Content>
      <Image class="w-100" src={logoSoftwow} alt="imagen ses" />
