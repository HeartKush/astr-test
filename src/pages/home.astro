---
import SpaceBg from '~/components/ui/Space-bg.astro';
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content2.astro';
import logoSoftwow from '~/assets/images/softwow-blanco.webp';
import { Image } from 'astro:assets';
import test from '../assets/images/retrato-jovenes-globo.jpg'

const metadata = {
  title: 'SES — Softwow Ecommerce Services',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <SpaceBg />
