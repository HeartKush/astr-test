        isReversed
        image={{
          src: test,
          alt: 'Features Image',
        }}
      >
        <Fragment slot="content">
          <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Seguimiento</h3>
        </Fragment>
      </Content>
    </div>
    <div class="flex flex-col md:flex-row justify-center md:gap-20 pb-7">
